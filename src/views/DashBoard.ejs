<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= pagetitle %></title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #0a0a12;
            color: #e0e0e0;
            font-family: 'Arial';
        }
        .moviecard {
            background: #1a1a2e;
            border-radius: 8px;
            transition: 0.3s;
            border: 1px solid #33334d;
        }
        .moviecard:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(255, 200, 0, 0.2);
        }
        .movieposter {
            height: 300px;
            object-fit: cover;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }
        .addbutton {
            background: #ffcc00;
            color: #000;
            font-weight: bold;
            border: none;
        }
        .navbar {
            background: #000 !important;
            border-bottom: 2px solid #ffcc00;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">ðŸŽ¬ MovieFlix</a>
            <a href="/addmoviepage" class="btn addbutton">Add Movie</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <% movies.forEach(function(movie){ %>
                <div class="col-md-4 mb-4">
                    <div class="moviecard h-100">
                        <img src="<%= movie.poster %>" class="movieposter w-100">
                        <div class="p-3">
                            <h4><%= movie.name %></h4>
                            <p>Rating: <%= movie.rating %></p>
                            <div class="d-flex justify-content-between">
                                <a href="/removemovie/<%= movie._id %>" class="btn btn-sm btn-danger">Remove</a>
                                <a href="/editmovie?movieid=<%= movie._id %>" class="btn btn-sm btn-warning">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>