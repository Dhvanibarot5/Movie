<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add New Movie</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      body {
        background: linear-gradient(to right, #141e30, #243b55);
        font-family: "Segoe UI", sans-serif;
        color: #333;
        padding: 0;
        margin: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .form-card {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        max-width: 700px;
        width: 100%;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
      }

      .form-card h2 {
        text-align: center;
        margin-bottom: 30px;
        font-weight: bold;
        color: #243b55;
      }

      label.form-label {
        font-weight: 500;
        margin-bottom: 16px !important;
      }

      .form-control,
      .form-select {
        border-radius: 8px;
        padding: 10px;
      }

      .form-check-label {
        font-weight: 400;
      }

      .btn-submit {
        background-color: #243b55;
        color: white;
        font-weight: 600;
        padding: 12px;
        border-radius: 8px;
        border: none;
        width: 100%;
        margin-top: 20px;
        transition: 0.3s;
      }

      .btn-submit:hover {
        background-color: #1e2d45;
      }

      .top-links {
        position: absolute;
        top: 20px;
        left: 30px;
      }

      .navbar-brand {
        color: #fff;
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
      }

      .nav-link {
        color: #fff;
        text-decoration: none;
        margin-left: 15px;
        padding: 6px 12px;
        border: 1px solid #fff;
        border-radius: 6px;
        font-size: 14px;
      }

      .nav-link:hover {
        background-color: #fff;
        color: #243b55;
      }

      @media (max-width: 768px) {
        .form-card {
          padding: 25px;
        }
      }
    </style>
  </head>
  <body>
    <div class="top-links">
      <a href="#" class="navbar-brand">ðŸŽ¬ MovieFlix</a>
      <a href="/" class="nav-link">Home</a>
    </div>

    <div class="form-card">
      <h2>ðŸŽ¥ Add New Movie</h2>
      <form method="POST" action="/addmovie" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label mt-3">Movie Name</label>
          <input type="text" name="name" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label mt-3">Rating</label>
          <input type="text" name="rating" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label mt-3 d-block">Language</label>
          <div class="row">
            <div class="col-auto">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="language" value="hindi" id="langHindi" />
                <label class="form-check-label" for="langHindi">Hindi</label>
              </div>
            </div>
            <div class="col-auto">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="language" value="english" id="langEnglish" />
                <label class="form-check-label" for="langEnglish">English</label>
              </div>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label mt-3 d-block">Genre</label>
          <div class="row">
            <% const genres = ['Action', 'Comedy', 'Drama', 'Sci-Fi']; %> <% genres.forEach((g, i) => { %>
            <div class="col-auto">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="genre" value="<%= g %>" id="genre<%= i %>" />
                <label class="form-check-label" for="genre<%= i %>"><%= g %></label>
              </div>
            </div>
            <% }) %>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label mt-3">Release Date</label>
          <input type="date" name="releasedate" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label mt-3">City</label>
          <select name="city" class="form-select" required>
            <option value="">Select City</option>
            <option value="Mumbai">Mumbai</option>
            <option value="Delhi">Delhi</option>
            <option value="Bangalore">Bangalore</option>
            <option value="Hyderabad">Hyderabad</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label mt-3">Cast</label>
          <input type="text" name="actors" class="form-control" placeholder="Actor 1, Actor 2,..." required />
        </div>

        <div class="mb-3">
          <label class="form-label mt-3">Movie Poster</label>
          <input type="file" name="poster" class="form-control" accept="image/*" required />
        </div>

        <button type="submit" class="btn btn-submit mt-4">âž• Add Movie</button>
      </form>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
