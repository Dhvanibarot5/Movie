<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Edit Movie</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
      color: #f1f1f1;
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
    }

    .editcontainer {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: 16px;
      padding: 30px;
      max-width: 700px;
      margin: 50px auto;
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .movieposter {
      max-height: 300px;
      width: 100%;
      object-fit: cover;
      border-radius: 12px;
      margin-bottom: 25px;
      border: 1px solid #555;
    }

    .formlabel {
      color: #ffcc00;
      margin-top: 10px;
      font-weight: 500;
    }

    .inputfield, .form-select {
      background: rgba(255, 255, 255, 0.1);
      border: none;
      color: #fff;
      padding: 10px;
      border-radius: 6px;
    }

    .inputfield:focus, .form-select:focus {
      background: rgba(255, 255, 255, 0.15);
      color: #fff;
      outline: none;
      box-shadow: 0 0 0 2px #ffcc00;
    }

    .updatebtn {
      background: #ffcc00;
      color: #000;
      font-weight: bold;
      padding: 12px;
      border-radius: 8px;
      margin-top: 25px;
      transition: 0.3s ease;
    }

    .updatebtn:hover {
      background: #ffdd33;
    }

    .navbar {
      background: #000 !important;
      border-bottom: 2px solid #ffcc00;
    }

    .form-check-label {
      font-weight: 400;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-dark px-4">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <a class="navbar-brand" href="#">ðŸŽ¬ MovieFlix</a>
      <a href="/" class="btn btn-danger">Home</a>
    </div>
  </nav>

  <div class="container">
    <div class="editcontainer">
      <h2 class="text-center mb-4">Edit Movie</h2>
      
      <img src="<%= movie.poster %>" class="movieposter" alt="Poster">
      
      <form method="post" action="/updatemovie/<%= movie._id %>" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="formlabel">Movie Name</label>
          <input type="text" name="name" class="form-control inputfield" value="<%= movie.name %>" required>
        </div>

        <div class="mb-3">
          <label class="formlabel">Rating</label>
          <input type="text" name="rating" class="form-control inputfield" value="<%= movie.rating %>" required>
        </div>

        <div class="mb-3">
          <label class="formlabel">Language</label>
          <div class="d-flex gap-4">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="language" value="hindi" id="hindi" <%= movie.language === 'hindi' ? 'checked' : '' %>>
              <label class="form-check-label" for="hindi">Hindi</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="language" value="english" id="english" <%= movie.language === 'english' ? 'checked' : '' %>>
              <label class="form-check-label" for="english">English</label>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="formlabel">Genre</label>
          <div class="d-flex flex-wrap gap-3">
            <% const allgenres = ['Action', 'Comedy', 'Drama', 'Sci-Fi']; %>
            <% allgenres.forEach(genre => { %>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="genre" value="<%= genre %>" id="<%= genre.toLowerCase() %>"
                  <%= movie.genre.includes(genre) ? 'checked' : '' %>>
                <label class="form-check-label" for="<%= genre.toLowerCase() %>"><%= genre %></label>
              </div>
            <% }); %>
          </div>
        </div>

        <div class="mb-3">
          <label class="formlabel">Release Date</label>
          <input type="date" name="releasedate" class="form-control inputfield"
            value="<%= movie.releasedate.toISOString().split('T')[0] %>" required>
        </div>

        <div class="mb-3">
          <label class="formlabel">City</label>
          <select name="city" class="form-select inputfield" required>
            <% const cities = ['Mumbai', 'Delhi', 'Bangalore', 'Hyderabad']; %>
            <% cities.forEach(city => { %>
              <option value="<%= city %>" <%= movie.city === city ? 'selected' : '' %>><%= city %></option>
            <% }); %>
          </select>
        </div>

        <div class="mb-3">
          <label class="formlabel">Cast</label>
          <input type="text" name="cast" class="form-control inputfield" value="<%= movie.actors %>" required>
        </div>

        <div class="mb-3">
          <label class="formlabel">Update Poster</label>
          <input type="file" name="poster" class="form-control inputfield" accept="image/*">
        </div>

        <button type="submit" class="btn updatebtn w-100">ðŸ’¾ Update Movie</button>
      </form>
    </div>
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
